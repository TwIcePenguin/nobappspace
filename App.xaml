<Application x:Class="NOBApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/DefaultTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/SamuraiTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 保留原本 TabControl 排版修正，指向 CurrentTabItemStyle (預設) -->
            <Style TargetType="TabControl" BasedOn="{StaticResource BaseTabControlStyle}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

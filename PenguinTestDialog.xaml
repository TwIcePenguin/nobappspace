<Window x:Class="NOBApp.PenguinTestDialog"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="企鵝測試 B" Height="220" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
 <Grid Margin="10">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 </Grid.RowDefinitions>

 <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
 <Label Content="帳號:" Width="50" VerticalAlignment="Center"/>
 <TextBox x:Name="TB_Account" Width="300" />
 </StackPanel>

 <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
 <Label Content="密碼:" Width="50" VerticalAlignment="Center"/>
 <TextBox x:Name="TB_Password" Width="300" />
 </StackPanel>

 <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
 <Button x:Name="Btn_Send" Content="送出並取得加密字串" Width="180" Click="Btn_Send_Click" />
 <Button x:Name="Btn_Copy" Content="複製結果" Width="100" Margin="8,0,0,0" Click="Btn_Copy_Click" />
 <Button x:Name="Btn_Close" Content="關閉" Width="80" Margin="8,0,0,0" Click="Btn_Close_Click" />
 </StackPanel>

 <TextBox x:Name="TB_Result" Grid.Row="3" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
 </Grid>
</Window>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:sys="clr-namespace:System;assembly=mscorlib">
 <Color x:Key="WindowBackgroundColor">#FF2B2B2B</Color>
 <Color x:Key="PanelBackgroundColor">#FFE9DAB6</Color>
 <Color x:Key="PanelBorderColor">#FF5B3A1E</Color>
 <Color x:Key="PrimaryColor">#FF7B3F00</Color>
 <Color x:Key="PrimaryHoverColor">#FF9D5A15</Color>
 <Color x:Key="PrimaryPressedColor">#FF5E2B00</Color>
 <Color x:Key="AccentColor">#FF3E2E1F</Color>
 <Color x:Key="DangerColor">#FF8B1A14</Color>
 <Color x:Key="DangerHoverColor">#FFA13A33</Color>
 <Color x:Key="DangerPressedColor">#FF5D0F0C</Color>

 <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
 <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
 <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorderColor}" />
 <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
 <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />
 <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}" />
 <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
 <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
 <SolidColorBrush x:Key="DangerHoverBrush" Color="{StaticResource DangerHoverColor}" />
 <SolidColorBrush x:Key="DangerPressedBrush" Color="{StaticResource DangerPressedColor}" />

 <FontFamily x:Key="BaseFont">Microsoft JhengHei UI</FontFamily>
 <sys:Double x:Key="BaseFontSize">14</sys:Double>
 <sys:Double x:Key="ButtonFontSize">14</sys:Double>

 <Style x:Key="PrimaryButton" TargetType="Button">
 <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
 <Setter Property="Foreground" Value="#FFF5E6C8" />
 <Setter Property="FontFamily" Value="{StaticResource BaseFont}" />
 <Setter Property="FontSize" Value="{StaticResource ButtonFontSize}" />
 <Setter Property="Padding" Value="8,4" />
 <Setter Property="Margin" Value="4" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}" />
 <Setter Property="Cursor" Value="Hand" />
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2" SnapsToDevicePixels="True">
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
 </Border>
 <ControlTemplate.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}" />
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}" />
 </Trigger>
 <Trigger Property="IsEnabled" Value="False">
 <Setter Property="Opacity" Value="0.4" />
 </Trigger>
 </ControlTemplate.Triggers>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <Style x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
 <Setter Property="Background" Value="{StaticResource AccentBrush}" />
 <Setter Property="Foreground" Value="#FFE9DAB6" />
 <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter Property="Background" Value="#FF56402C" />
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter Property="Background" Value="#FF261A12" />
 </Trigger>
 </Style.Triggers>
 </Style>

 <Style x:Key="DangerButton" BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
 <Setter Property="Background" Value="{StaticResource DangerBrush}" />
 <Setter Property="Foreground" Value="#FFFBE5D2" />
 <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter Property="Background" Value="{StaticResource DangerHoverBrush}" />
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter Property="Background" Value="{StaticResource DangerPressedBrush}" />
 </Trigger>
 </Style.Triggers>
 </Style>

 <Style x:Key="InputBox" TargetType="TextBox">
 <Setter Property="FontFamily" Value="{StaticResource BaseFont}" />
 <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
 <Setter Property="Padding" Value="6,3" />
 <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Background" Value="#FFF5E6C8" />
 <Setter Property="Foreground" Value="#FF2B2B2B" />
 </Style>

 <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
 <Setter Property="FontFamily" Value="{StaticResource BaseFont}" />
 <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
 <Setter Property="Padding" Value="4,2" />
 <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Background" Value="#FFF5E6C8" />
 <Setter Property="Foreground" Value="#FF2B2B2B" />
 </Style>

 <Style x:Key="CleanTabControl" TargetType="TabControl">
 <Setter Property="Background" Value="#00FFFFFF" />
 <Setter Property="BorderThickness" Value="0" />
 </Style>

 <Style x:Key="CleanTabItem" TargetType="TabItem">
 <Setter Property="FontFamily" Value="{StaticResource BaseFont}" />
 <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
 <Setter Property="Padding" Value="10,4" />
 <Setter Property="Margin" Value="0,0,2,0" />
 <Setter Property="Background" Value="#FFE9DAB6" />
 <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}" />
 <Setter Property="BorderThickness" Value="1" />
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="TabItem">
 <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0" Padding="{TemplateBinding Padding}">
 <ContentPresenter />
 </Border>
 <ControlTemplate.Triggers>
 <Trigger Property="IsSelected" Value="True">
 <Setter TargetName="Bd" Property="Background" Value="#FFBFAD84" />
 <Setter Property="FontWeight" Value="Bold" />
 </Trigger>
 </ControlTemplate.Triggers>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <Style x:Key="ImageButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
 <Setter Property="Padding" Value="10,4"/>
 <Setter Property="FontWeight" Value="Bold"/>
 <Setter Property="Background">
 <Setter.Value>
 <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="#FF9D5A15" Offset="0"/>
 <GradientStop Color="#FF7B3F00" Offset="0.6"/>
 <GradientStop Color="#FF5E2B00" Offset="1"/>
 </LinearGradientBrush>
 </Setter.Value>
 </Setter>
 <Setter Property="BorderThickness" Value="1"/>
 <Setter Property="BorderBrush" Value="#FFA56E2C"/>
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
 <Border.Effect>
 <DropShadowEffect Color="#AA000000" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
 </Border.Effect>
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
 </Border>
 <ControlTemplate.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter TargetName="Bd" Property="Background">
 <Setter.Value>
 <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="#FFA56E2C" Offset="0"/>
 <GradientStop Color="#FF9D5A15" Offset="0.6"/>
 <GradientStop Color="#FF7B3F00" Offset="1"/>
 </LinearGradientBrush>
 </Setter.Value>
 </Setter>
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter TargetName="Bd" Property="Background">
 <Setter.Value>
 <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="#FF5E2B00" Offset="0"/>
 <GradientStop Color="#FF4A2100" Offset="1"/>
 </LinearGradientBrush>
 </Setter.Value>
 </Setter>
 </Trigger>
 <Trigger Property="IsEnabled" Value="False">
 <Setter TargetName="Bd" Property="Opacity" Value="0.4"/>
 </Trigger>
 </ControlTemplate.Triggers>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <Style x:Key="TabItemButtonStyle" TargetType="TabItem" BasedOn="{StaticResource CleanTabItem}">
 <Setter Property="Padding" Value="12,6"/>
 <Setter Property="Margin" Value="0,0,6,0"/>
 <Setter Property="Background" Value="#FFE9DAB6"/>
 <Setter Property="BorderBrush" Value="#FF5B3A1E"/>
 <Setter Property="BorderThickness" Value="1"/>
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="TabItem">
 <Border x:Name="Bd" CornerRadius="0" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
 </Border>
 <ControlTemplate.Triggers>
 <Trigger Property="IsSelected" Value="True">
 <Setter TargetName="Bd" Property="Background" Value="#FFBFAD84"/>
 <Setter Property="FontWeight" Value="Bold"/>
 <Setter TargetName="Bd" Property="BorderBrush" Value="#FFA56E2C"/>
 </Trigger>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter TargetName="Bd" Property="Background" Value="#FFD8C9A3"/>
 </Trigger>
 </ControlTemplate.Triggers>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 </Style>

 <ImageBrush x:Key="AppBackgroundImage" ImageSource="/6f90a860dd47c4bafb631f2fa7930e50.png" Stretch="UniformToFill" Opacity="0.35" />
</ResourceDictionary>